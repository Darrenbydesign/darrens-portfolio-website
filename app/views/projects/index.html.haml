.page-header
  %h1 Portfolio
.container
  #portfolioContainer
    .grid-wrapper
      - @projects.each do |project|
        .grid-item
          %figure.port-image-preview
            = link_to(image_tag project.image.url, :class=> "img-responsive"), project
          %h2.portfolio-title
            = link_to project.title, project
          %p.portfolio-date
            = project.created_at.strftime('%A, %B %d')