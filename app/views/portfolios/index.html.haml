.page-header
  %h1 My Work
#portfolio
  - @portfolios.each do |portfolio|
    .portfolio-header
      %h2.portfolio-title
        = link_to portfolio.title, portfolio
      %p.portfolio-date
        = portfolio.created_at.strftime('%A, %B %d')

.slab
  .custom_pagination
    = will_paginate @portfolios
  
  - if user_signed_in?
    %ul.admin-controls
      %li
        = link_to "Create New Project", new_portfolio_path, :class => "btn-text"