= content_tag_for( :article, post , :class => "blog-container" ) do
  - if summary
    %header
      .blog-title
        %h2
          = link_to post.title, post
        .meta
          Posted on
          %time{:pubdate => 'true', :datetime => post.timestamp.iso8601}
            = post.date.strftime '%e %B %Y'
          %span
            by
            %em.author
              = post.author
    .post-container
      = post_summary_html post
      %span.more
        = link_to 'Read more&hellip;'.html_safe, post
  - else
    %header.blog-header
      .blog-title
        .blog-title-content
          %h2
            = post.title
          .meta
            Posted on
            %time{:pubdate => 'true', :datetime => post.timestamp.iso8601}
              = post.date.strftime '%e %B %Y'
            %span
              by
              %em.author
                = post.author
    .post-container
      ~ post_content_html post
      %hr/