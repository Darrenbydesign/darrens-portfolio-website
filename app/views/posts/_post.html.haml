= content_tag_for( :article, post , :class => "blog-container" ) do
  - if summary
    %header
      .blog-title
        %h2
          = link_to post.title, post
        .meta
          %span
            By:
            %em.author
              = post.author
          |
          %time{:pubdate => 'true', :datetime => post.timestamp.iso8601}
            = post.date.strftime '%e %B %Y'
    .post-container
      = post_summary_html post
      %span.more
        = link_to 'Continue Story&hellip;'.html_safe, post
      %hr/
  - else
    %header.blog-header
      .blog-title
        .blog-title-content
          %h2
            = post.title
          .meta
            %span
              By:
              %em.author
                = post.author
            |
            %time{:pubdate => 'true', :datetime => post.timestamp.iso8601}
              = post.date.strftime '%e %B %Y'
    .post-container
      ~ post_content_html post
      %hr/